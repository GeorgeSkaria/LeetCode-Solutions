class Solution:
    def getHappyString(self, n: int, k: int) -> str:
        res = []
        letters =['a','b','c']

        def btrack(s):
            if len(s)==n:
                res.append(s)
                return 
            for i in range(3):
                if not s or s[-1] != letters[i] :
                    s += letters[i]
                    btrack(s)
                    s = s[:len(s)-1]

        btrack("")

        if len(res)<k:
            return ""
        return res[k-1]
        
        
            
        
